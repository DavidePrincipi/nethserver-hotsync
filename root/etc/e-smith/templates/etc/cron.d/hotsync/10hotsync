{
    if ( $hotsync{role} eq 'master' && $hotsync{RemoteHost} eq '')
    {
        die "Role is master but no remote host is configured!";
    }
    if ( $hotsync{role} eq 'master') 
    {
        $OUT="#HotSync Master\n0,15,30,45 * * * * root /usr/sbin/hotsync > /dev/null";
    } elsif ( $hotsync{role} eq 'spare') {
        $OUT="#HotSync Spare\n0 1 * * * root /usr/sbin/hotsync-spare-packages > /dev/null";
    } else {
        die "Unknow role";
    }
} 
